{
    "name": "phptdgram/adapter-ffi",
    "type": "library",
    "description": "PHP TD Gram PHP 7.4 FFI Adapter",
    "keywords": [
        "ffi",
        "adapter",
        "phptdgram",
        "telegram",
        "tdlib"
    ],
    "homepage": "https://github.com/phptdgram/adapter-ffi",
    "license": "MIT",
    "authors": [
        {
            "name": "Aurimas Niekis",
            "email": "aurimas@niekis.lt"
        }
    ],
    "support": {
        "issues": "https://github.com/phptdgram/adapter-ffi",
        "source": "https://github.com/phptdgram/adapter-ffi"
    },
    "require": {
        "php": "^7.4||^8.0",
        "ext-ffi": "*",
        "ext-json": "*",
        "phptdgram/adapter": "^1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2"
    },
    "autoload": {
        "psr-4": {
            "PHPTdGram\\Adapter\\FFI\\": "src"
        },
        "classmap": [
            "src/"
        ]
    },
    "scripts": {
        "cs-check": "php-cs-fixer fix --dry-run --diff --diff-format udiff",
        "cs-fix": "php-cs-fixer fix",
        "ci-run": ["@cs-check"]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
